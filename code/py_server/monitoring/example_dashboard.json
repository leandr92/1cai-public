{
  "dashboard": {
    "id": null,
    "title": "MCP Server Monitoring",
    "tags": ["mcp", "monitoring", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mcp-server\"}",
            "refId": "A"
          },
          {
            "expr": "mcp_service_info",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_http_request_duration_seconds_count[5m])",
            "refId": "A",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate by Type",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_validation_errors_total[5m])",
            "refId": "A",
            "legendFormat": "Validation Errors"
          },
          {
            "expr": "rate(mcp_transport_errors_total[5m])",
            "refId": "B",
            "legendFormat": "Transport Errors"
          },
          {
            "expr": "rate(mcp_integration_errors_total[5m])",
            "refId": "C",
            "legendFormat": "Integration Errors"
          },
          {
            "expr": "rate(mcp_auth_errors_total[5m])",
            "refId": "D",
            "legendFormat": "Auth Errors"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Response Time Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(mcp_http_request_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(mcp_http_request_duration_seconds_bucket[5m]))",
            "refId": "B",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(mcp_http_request_duration_seconds_bucket[5m]))",
            "refId": "C",
            "legendFormat": "P99"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Active Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_active_requests",
            "refId": "A",
            "legendFormat": "{{operation_type}}"
          }
        ],
        "yAxes": [
          {
            "label": "Active Requests",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "MCP Operations Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_operation_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{operation_type}} {{operation}} - P95"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "Circuit Breaker Status",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_circuit_breaker_state",
            "refId": "A",
            "legendFormat": "{{operation}}"
          }
        ],
        "yAxes": [
          {
            "label": "State (0=Closed, 1=Half-Open, 2=Open)",
            "min": 0,
            "max": 2
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "Integration Call Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_integration_call_duration_seconds_bucket[5m]))",
            "refId": "A",
            "legendFormat": "{{integration_type}} {{operation}} - P95"
          }
        ],
        "yAxes": [
          {
            "label": "Duration (s)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      },
      {
        "id": 9,
        "title": "Retry Attempts",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_retry_attempts_total[5m])",
            "refId": "A",
            "legendFormat": "{{operation}} - success={{success}}"
          }
        ],
        "yAxes": [
          {
            "label": "Retries/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 40
        }
      },
      {
        "id": 10,
        "title": "Queue Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "mcp_queue_size",
            "refId": "A",
            "legendFormat": "{{queue_name}}"
          }
        ],
        "yAxes": [
          {
            "label": "Queue Size",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 48
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1
  }
}