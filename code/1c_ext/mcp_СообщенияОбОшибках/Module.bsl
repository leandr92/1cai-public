// Находит сообщение об ошибке по коду и типу
Функция НайтиСообщениеПоКоду(КодОшибки, ТипСообщения, Язык)
	
	Справочник = ПолучитьСправочникСообщений();
	
	Если Справочник.Свойство(КодОшибки) Тогда
		Запись = Справочник[КодОшибки];
		
		Если Запись.Свойство(ТипСообщения) Тогда
			Сообщения = Запись[ТипСообщения];
			
			Если Сообщения.Свойство(Язык) Тогда
				Возврат Сообщения[Язык];
			ИначеЕсли Сообщения.Свойство("ru") Тогда
				Возврат Сообщения["ru"];
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	// Fallback - базовое сообщение при отсутствии конкретного
	Возврат "Неопределенная ошибка: " + КодОшибки;
	
КонецФункции

// Подставляет параметры в шаблон сообщения
Функция ПодставитьПараметрыВСообщение(Сообщение, Параметры)
	
	Результат = Сообщение;
	
	Для каждого КлючИЗначение Из Параметры Цикл
		Маркер = "%" + КлючИЗначение.Ключ + "%";
		Результат = СтрЗаменить(Результат, Маркер, Строка(КлючИЗначение.Значение));
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

