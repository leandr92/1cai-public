{
  "dashboard": {
    "title": "1C AI Stack - Business Metrics",
    "tags": ["business", "revenue"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Monthly Recurring Revenue (MRR)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(transaction_amount_eur{status='completed', type='subscription'}) by (month)",
            "legendFormat": "MRR"
          }
        ],
        "gridPos": {"x": 0, "y": 0, "w": 24, "h": 10}
      },
      {
        "id": 2,
        "title": "Active Customers",
        "type": "graph",
        "targets": [
          {
            "expr": "count(active_tenants{status='active'})",
            "legendFormat": "Customers"
          }
        ],
        "gridPos": {"x": 0, "y": 10, "w": 12, "h": 8}
      },
      {
        "id": 3,
        "title": "Customer Growth Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "(count(active_tenants) - count(active_tenants offset 30d)) / count(active_tenants offset 30d) * 100"
          }
        ],
        "gridPos": {"x": 12, "y": 10, "w": 12, "h": 8}
      },
      {
        "id": 4,
        "title": "Revenue by Plan",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(transaction_amount_eur) by (plan)"
          }
        ],
        "gridPos": {"x": 0, "y": 18, "w": 12, "h": 8}
      },
      {
        "id": 5,
        "title": "Churn Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "count(tenants{status='cancelled'}) / count(tenants{status='active'}) * 100"
          }
        ],
        "gridPos": {"x": 12, "y": 18, "w": 12, "h": 8}
      }
    ],
    "refresh": "5m",
    "time": {
      "from": "now-90d",
      "to": "now"
    }
  }
}
