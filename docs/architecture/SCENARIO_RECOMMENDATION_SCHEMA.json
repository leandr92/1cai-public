{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1c-ai-stack.example.com/schemas/scenario-recommendation/v1",
  "title": "ScenarioRecommendation",
  "description": "JSON Schema для рекомендаций сценариев на основе Unified Change Graph",
  "type": "object",
  "required": ["scenario_id", "relevance_score"],
  "properties": {
    "scenario_id": {"type": "string"},
    "scenario_name": {"type": "string"},
    "relevance_score": {"type": "number", "minimum": 0, "maximum": 1},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "reason": {"type": "string"},
    "graph_nodes_matched": {
      "type": "array",
      "items": {"type": "string"}
    },
    "trust_score": {
      "type": "object",
      "properties": {
        "overall_score": {"type": "number", "minimum": 0, "maximum": 1},
        "scenario_completeness": {"type": "number", "minimum": 0, "maximum": 1},
        "graph_coverage": {"type": "number", "minimum": 0, "maximum": 1},
        "risk_assessment": {"type": "number", "minimum": 0, "maximum": 1},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1}
      }
    },
    "adaptation_applied": {"type": "boolean"},
    "adapted_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step_id": {"type": "string"},
          "original_step": {"type": "object"},
          "adapted_step": {"type": "object"},
          "changes": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  },
  "additionalProperties": false
}

