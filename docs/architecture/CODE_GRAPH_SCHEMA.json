{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1c-ai-stack.example.com/schemas/code-graph/v1",
  "title": "CodeGraphExport",
  "type": "object",
  "required": ["nodes", "edges"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "kind", "display_name"],
        "properties": {
          "id": {
            "type": "string",
            "maxLength": 200
          },
          "kind": {
            "type": "string",
            "maxLength": 100
          },
          "display_name": {
            "type": "string",
            "maxLength": 500
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 100
            }
          },
          "props": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source", "target", "kind"],
        "properties": {
          "source": {
            "type": "string",
            "maxLength": 200
          },
          "target": {
            "type": "string",
            "maxLength": 200
          },
          "kind": {
            "type": "string",
            "maxLength": 100
          },
          "props": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}


