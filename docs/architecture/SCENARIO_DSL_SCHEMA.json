{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1c-ai-stack.example.com/schemas/scenario-dsl/v1",
  "title": "ScenarioPlan",
  "type": "object",
  "required": [
    "id",
    "goal",
    "steps",
    "required_autonomy",
    "overall_risk",
    "context",
    "version",
    "spec"
  ],
  "properties": {
    "id": {
      "type": "string",
      "maxLength": 200
    },
    "version": {
      "type": "string",
      "maxLength": 20
    },
    "spec": {
      "type": "string",
      "const": "scenario-dsl/v1"
    },
    "goal": {
      "type": "object",
      "required": ["id", "title", "description", "constraints", "success_criteria"],
      "properties": {
        "id": {
          "type": "string",
          "maxLength": 200
        },
        "title": {
          "type": "string",
          "maxLength": 500
        },
        "description": {
          "type": "string",
          "maxLength": 8000
        },
        "constraints": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean", "null"]
          }
        },
        "success_criteria": {
          "type": "array",
          "items": {
            "type": "string",
            "maxLength": 1000
          }
        }
      },
      "additionalProperties": true
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "risk_level",
          "autonomy_required",
          "checks",
          "executor",
          "metadata"
        ],
        "properties": {
          "id": {
            "type": "string",
            "maxLength": 200
          },
          "title": {
            "type": "string",
            "maxLength": 500
          },
          "description": {
            "type": "string",
            "maxLength": 8000
          },
          "risk_level": {
            "type": "string",
            "enum": [
              "read_only",
              "non_prod_change",
              "prod_low",
              "prod_high"
            ]
          },
          "autonomy_required": {
            "type": "string",
            "enum": [
              "A0_propose_only",
              "A1_safe_automation",
              "A2_non_prod_changes",
              "A3_restricted_prod"
            ]
          },
          "checks": {
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 2000
            }
          },
          "executor": {
            "type": "string",
            "maxLength": 200
          },
          "metadata": {
            "type": "object",
            "properties": {
              "graph_refs": {
                "description": "Ссылки на узлы Unified Change Graph в формате node:<id>:<KIND> или произвольные строки.",
                "type": "array",
                "items": {
                  "type": "string",
                  "maxLength": 500
                }
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "required_autonomy": {
      "type": "string",
      "enum": [
        "A0_propose_only",
        "A1_safe_automation",
        "A2_non_prod_changes",
        "A3_restricted_prod"
      ]
    },
    "overall_risk": {
      "type": "string",
      "enum": [
        "read_only",
        "non_prod_change",
        "prod_low",
        "prod_high"
      ]
    },
    "context": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean", "null"]
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "maxLength": 1000
      }
    }
  },
  "additionalProperties": true
}


