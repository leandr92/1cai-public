{
  "dashboard": {
    "title": "PostgreSQL Database Metrics",
    "tags": ["database", "postgresql", "demo"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Database Status",
        "type": "stat",
        "targets": [
          {"expr": "up{job=\"postgres-exporter\"}", "legendFormat": "PostgreSQL"}
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [{"color": "red", "value": 0}, {"color": "green", "value": 1}]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {"expr": "pg_stat_database_numbackends", "legendFormat": "{{datname}}"}
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Connection Usage (%)",
        "type": "stat",
        "targets": [
          {"expr": "pg_stat_database_numbackends / pg_settings_max_connections * 100", "legendFormat": "Connection Usage"}
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Connections Over Time",
        "type": "graph",
        "targets": [
          {"expr": "pg_stat_database_numbackends", "legendFormat": "{{datname}}"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 5,
        "title": "Database Activity",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_stat_database_tup_inserted[5m])", "legendFormat": "{{datname}} - inserts"},
          {"expr": "rate(pg_stat_database_tup_updated[5m])", "legendFormat": "{{datname}} - updates"},
          {"expr": "rate(pg_stat_database_tup_deleted[5m])", "legendFormat": "{{datname}} - deletes"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 6,
        "title": "Query Performance",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_stat_database_blk_read_time[5m])", "legendFormat": "{{datname}} - read time"},
          {"expr": "rate(pg_stat_database_blk_write_time[5m])", "legendFormat": "{{datname}} - write time"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14}
      },
      {
        "id": 7,
        "title": "Cache Hit Ratio",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_stat_database_blks_hit[5m]) / (rate(pg_stat_database_blks_read[5m]) + rate(pg_stat_database_blks_hit[5m])) * 100", "legendFormat": "{{datname}}"}
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
      },
      {
        "id": 8,
        "title": "Slow Queries",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_stat_activity_max_tx_duration[5m])", "legendFormat": "Max Transaction Duration"}
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 22}
      },
      {
        "id": 9,
        "title": "Database Size",
        "type": "graph",
        "targets": [
          {"expr": "pg_database_size_bytes", "legendFormat": "{{datname}}"}
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "custom": {
              "displayMode": "gradient-gauge"
            }
          }
        },
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 10,
        "title": "Replication Lag",
        "type": "graph",
        "targets": [
          {"expr": "pg_replication_lag", "legendFormat": "Replication Lag"}
        ],
        "fieldConfig": {
          "defaults": {"unit": "s"}
        },
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 28}
      },
      {
        "id": 11,
        "title": "WAL Archiving",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_wal_archival_success[5m])", "legendFormat": "WAL Archive Success Rate"}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 34}
      },
      {
        "id": 12,
        "title": "Deadlocks",
        "type": "graph",
        "targets": [
          {"expr": "rate(pg_stat_database_deadlocks[5m])", "legendFormat": "{{datname}}"}
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 34}
      }
    ]
  }
}