# Environment: STAGING
ENVIRONMENT=staging

# Application Settings
APP_NAME=AI-ассистенты
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=ai_assistants_staging
POSTGRES_USER=ai_assistants_staging_user
POSTGRES_PASSWORD=change_me_staging_password
DATABASE_URL=postgresql://ai_assistants_staging_user:change_me_staging_password@postgres:5432/ai_assistants_staging

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=change_me_redis_password

# API Keys (используйте AWS Secrets Manager в production)
OPENAI_API_KEY=your_staging_openai_key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_staging_supabase_key
JWT_SECRET_KEY=your_staging_jwt_secret_key_min_32_chars
SECRET_KEY=your_staging_secret_key_min_32_chars

# ML Configuration
MLFLOW_ENV_VAR=staging
MLFLOW_BACKEND_STORE_URI=sqlite:///mlflow_staging.db
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring
GRAFANA_PASSWORD=staging_grafana_admin
PROMETHEUS_RETENTION_TIME=7d
ALERT_EMAIL=alerts@yourcompany.com

# SMTP Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_RETRIES=3

# Security Settings
CORS_ORIGINS=https://staging.yourcompany.com
ALLOWED_HOSTS=staging.yourcompany.com

# Resource Limits
MAX_WORKERS=4
MAX_MEMORY=1G
MAX_CPU=1

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=ai-assistants-staging-backups
S3_BACKUP_PREFIX=staging/

# Feature Flags
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_ML_TRAINING=true
FEATURE_RATE_LIMITING=true
FEATURE_MONITORING=true

# Development Tools
JUPYTER_TOKEN=staging_jupyter_token_optional