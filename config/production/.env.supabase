# ===========================================
# Supabase Configuration
# ===========================================
# Автоматически генерируется при создании проекта Supabase
SUPABASE_API_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DATABASE_URL=postgresql://postgres:[password]@db.[project-id].supabase.co:5432/postgres

# ===========================================
# Supabase Site Configuration
# ===========================================
# URL вашего фронтенд приложения
SUPABASE_SITE_URL=https://your-domain.com

# Секретный ключ для JWT токенов
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ===========================================
# Supabase Storage Configuration
# ===========================================
# Максимальный размер файла в байтах (50MB по умолчанию)
SUPABASE_FILE_SIZE_LIMIT=52428800

# Бэкенд хранилища (s3, gcs, local)
SUPABASE_STORAGE_BACKEND=s3

# ===========================================
# Supabase Edge Functions
# ===========================================
# URL для edge functions
SUPABASE_EDGE_FUNCTIONS_URL=https://[project-id].supabase.co/functions/v1

# ===========================================
# Database Configuration
# ===========================================
# Параметры подключения к базе данных
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DATABASE_TIMEOUT=30

# ===========================================
# Authentication Configuration
# ===========================================
# Настройки аутентификации
AUTH_ENABLE_SIGNUP=true
AUTH_ENABLE_EMAIL_CONFIRMATIONS=false
AUTH_ENABLE_EMAIL_CHANGE_CONFIRMATIONS=false

# ===========================================
# API Configuration
# ===========================================
# Настройки API Gateway
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600
API_CORS_ORIGINS=https://your-domain.com,http://localhost:3000

# ===========================================
# Logging and Monitoring
# ===========================================
# Настройки логирования для Supabase
SUPABASE_LOG_LEVEL=INFO
SUPABASE_ENABLE_REQUEST_LOGGING=true
SUPABASE_ENABLE_ERROR_LOGGING=true

# ===========================================
# Security Configuration
# ===========================================
# Настройки безопасности
ENABLE_RLS=true
ENABLE_API_KEY_REQUIRED=true
ENABLE_SERVICE_ROLE_REQUIRED=true

# ===========================================
# Development vs Production
# ===========================================
# Режим работы
ENVIRONMENT=production

# Включить/отключить debug режим
DEBUG=false

# ===========================================
# Cache Configuration
# ===========================================
# Настройки кэширования
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600
ENABLE_CACHE=true

# ===========================================
# Email Configuration (опционально)
# ===========================================
# SMTP настройки для email уведомлений
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_SENDER_NAME=AI Assistants System